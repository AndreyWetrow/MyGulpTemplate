.modal
  .modal__content.modal__content--contact
    form.form(action="" method="post")
      .form__group.form__group--md
        input.form__control(type="text" placeholder="Ваше имя")
        span.form__line
      .form__group.form__group--md
        input.form__control(type="email" placeholder="Ваш email")
        span.form__line
      .form__group.form__group--md
        textarea.form__control.form__control--textarea(placeholder="Текст сообщения")
        span.form__line
      .form__footer
        .form__group.form__group--md
          button.btn.btn--blue.btn--rounded.btn--sm(type="submit") Отправить
    ul.modal__footer
      li e-mail: #[a(href="mailto:info@mywebsite.ru") info@mywebsite.ru]
      li тел: #[a(href="tel:+94323285622") +943-232-856-22]
    button.modal__close(type="button")
      img(src="images/close.svg" alt="Закрыть")